package Hash_Table_Remove;
import java.util.*;

public class Hash_Table_Remove {
	
	public static void main(String[] args)
    {
 
        // Criando uma Hashtable vazia
        Hashtable<Integer, String> hash_table =
        new Hashtable<Integer, String>();
 
        // Inserindo valores na tabela 
        hash_table.put(10, "Caro colega"); 
        hash_table.put(15, "Bem-vindo!!"); 
        hash_table.put(20, "nerd"); 
        hash_table.put(25, ":)"); 
        hash_table.put(30, "muito"); 
 
        // Exibindo os valores da Hashtable  
        System.out.println("A tabela inicial é: " + hash_table);
 
        
                    // Removendo o mapeamento de chave existente
        String returned_value = (String)hash_table.remove(20);
 
        // Verificando o valor retornado 
        System.out.println("O valor retornado é: “ + returned_value);
 
        // Exibindo o valor da nova tabela
        System.out.println(“A nova tabela é: " + hash_table);
    }

}
